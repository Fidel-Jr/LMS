@model LmsProject.Models.Course
@{
    ViewData["Title"] = Model.Title + "Edit";
}
<h1>Edit Course</h1>
<div class="py-4 shadow p-4 mt-4" style="border-radius: 5px;">
	<h2>Edit Course</h2>
	<form asp-action="Edit" method="post">
		<div class="form-group">
			<label class="form-label mb-2" for="Title">Course Title</label>
			<input type="text" class="form-control" asp-for="Title" />
			<span asp-validation-for="Title" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label class="form-label mb-2" for="Description">Course Description</label>
			<input type="text" class="form-control" asp-for="Description" />
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label class="form-label mb-2" for="EnrollmentCount">Maximum Count of Students</label>
			<input type="number" class="form-control" asp-for="EnrollmentCount" />
			<span asp-validation-for="EnrollmentCount" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary mt-3">Edit</button>
	</form>
</div>


@model List<LmsProject.Models.Module>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	ViewData["Title"] = "Manage Modules";
}
<h3>My Current Modules</h3>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var course in Model)
        {
            <tr>
                <th scope="row">@course.Id</th>
                <td>@course.Title</td>
                <td>@course.Description</td>
                <td>
                    <a asp-action="Index" asp-controller="Course" asp-route-id="@course.CourseId" class="btn btn-primary">View</a>
                    <a asp-action="Edit" asp-controller="Module" asp-route-id="@course.Id" class="btn btn-secondary">Edit</a>
                    <form asp-action="Delete" asp-controller="Course" asp-route-id="@course.Id" method="post" style="display:inline;">
                        @* <button type="submit" class="btn btn-danger">Delete</button> *@
					</form>
                </td>   
            </tr>
		}
    </tbody>
</table>

@model LmsProject.Models.Dtos.ModuleDTO
@{
}
<h1>Add Module</h1>
<div class="py-4 shadow p-4 mt-4" style="border-radius: 5px;">
	<h2>New Module</h2>
	<form asp-action="Create" method="post">
		<div class="form-group">
			<label class="form-label mb-2" for="Title">Title</label>
			<input type="text" class="form-control" asp-for="Title" />
			<span asp-validation-for="Title" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label class="form-label mb-2" for="Description">Description</label>
			<input type="text" class="form-control" asp-for="Description" />
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary mt-3">Add</button>
	</form>
</div>

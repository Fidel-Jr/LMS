@model LmsProject.Areas.Teacher.Models.CourseModuleMaterial
@{
    ViewData["Title"] = Model.Course.Title;
}

<h2>@Model.Course.Title</h2>
<div class="py-4 shadow p-4" style="border-radius: 5px;">

    <div class="accordion" id="lessonAccordion">
        

        @if (Model.EnrollmentStatus == "Accepted")
        {
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingGeneral">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseGeneral" aria-expanded="true" aria-controls="collapseGeneral">
                        General
                    </button>
                </h2>
                    <div id="collapseGeneral" class="accordion-collapse collapse show" aria-labelledby="headingGeneral" data-bs-parent="#courseAccordion">
                        <div class="accordion-body">
                            <ul class="list-unstyled">
                                <li>
                                    <i class="bi bi-chat-left-text"></i> Announcements
                                </li>
                                <li class="d-flex align-items-center justify-content-between border rounded p-2 mt-2">
                                    <div>
                                        <i class="bi bi-file-earmark-word"></i>
                                        <a href="#">PE 4 COURSE OUTLINE.docx</a>
                                        <br>
                                        <small class="text-muted">Uploaded 29/01/24, 08:44</small>
                                    </div>
                                    <button class="btn btn-sm btn-outline-success">Mark as done</button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            var index = 1;
            foreach (var module in Model.Modules)
            {
                var headingId = $"headingLesson{index}";
                var collapseId = $"collapseLesson{index}";

                <div class="accordion-item">
                    <h2 class="accordion-header" id="@headingId">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="false" aria-controls="@collapseId">
                            @module.Title
                        </button>
                    </h2>
                    <div id="@collapseId" class="accordion-collapse collapse" aria-labelledby="@headingId" data-bs-parent="#lessonAccordion">
                        <div class="accordion-body">
                            @* <div class="accordion" id="materialAccordion-@index">
                                    <!-- Example Material -->
                                    <div class="accordion-item">
                                        <h2 class="accordion-header" id="headingMaterial-@index-1">
                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseMaterial-@index-1" aria-expanded="false" aria-controls="collapseMaterial-@index-1">
                                                Learning Material 1.1: What is Programming?
                                            </button>
                                        </h2>
                                        <div id="collapseMaterial-@index-1" class="accordion-collapse collapse" aria-labelledby="headingMaterial-@index-1" data-bs-parent="#materialAccordion-@index">
                                            <div class="accordion-body">
                                                <p><strong>Content:</strong> Programming is the process of creating instructions for a computer to perform tasks...</p>
                                                <a href="/files/lesson1-material1.pdf" download class="btn btn-sm btn-primary mt-2">
                                                    📥 Download PDF
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <a asp-action="Create" asp-controller="Material" asp-route-id="@module.Id" class="btn btn-primary mt-3">+ New Material</a>
                                </div> *@
                        </div>
                    </div>
                </div>

                index++;
            }
        }
        else if(Model.EnrollmentStatus == "Pending")
        {
			<h4 class="mb-3">You request is pending.</h4>
            @* <a asp-area="Student" asp-action="Enroll" asp-controller="Course" asp-route-id="@Model.Course.Id" class="btn btn-success">Enroll in this course.</a> *@
        }
        else
        {
            <h4 class="mb-3">You are not enrolled in this course.</h4>
            <a asp-area="Student" asp-action="Enroll" asp-controller="Course" asp-route-id="@Model.Course.Id" class="btn btn-success">Enroll in this course.</a>
        }


    </div>


